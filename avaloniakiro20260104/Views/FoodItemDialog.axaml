<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:avaloniakiro20260104.ViewModels"
        x:Class="avaloniakiro20260104.Views.FoodItemDialog"
        Title="食品項目"
        Width="500" Height="500"
        WindowStartupLocation="CenterOwner"
        CanResize="False">

    <Border Background="#F8FAFC" Padding="20">
        <ScrollViewer>
            <StackPanel Spacing="15">
                <TextBlock Text="食品項目資訊" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center"/>
                
                <Grid ColumnDefinitions="120,*" RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto" Margin="0,20,0,0">
                    <!-- API 支援的欄位（會同步到後端） -->
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="名稱:" VerticalAlignment="Center" FontWeight="SemiBold"/>
                    <TextBox Grid.Row="0" Grid.Column="1" Name="NameTextBox" Watermark="輸入食品名稱（會同步到 API）" Margin="10,0,0,0"/>
                    
                    <TextBlock Grid.Row="1" Grid.Column="0" Text="數量:" VerticalAlignment="Center" FontWeight="SemiBold" Margin="0,15,0,0"/>
                    <NumericUpDown Grid.Row="1" Grid.Column="1" Name="AmountNumeric" Minimum="1" Value="1" Margin="10,15,0,0"/>
                    
                    <!-- 本地儲存欄位（不會同步到 API） -->
                    <TextBlock Grid.Row="2" Grid.Column="0" Text="到期日:" VerticalAlignment="Center" FontWeight="SemiBold" Margin="0,15,0,0"/>
                    <DatePicker Grid.Row="2" Grid.Column="1" Name="ToDatePicker" Margin="10,15,0,0"/>
                    
                    <TextBlock Grid.Row="3" Grid.Column="0" Text="圖片網址:" VerticalAlignment="Center" FontWeight="SemiBold" Margin="0,15,0,0"/>
                    <TextBox Grid.Row="3" Grid.Column="1" Name="PhotoTextBox" Watermark="輸入圖片網址（僅本地儲存）" Margin="10,15,0,0"/>
                    
                    <TextBlock Grid.Row="4" Grid.Column="0" Text="價錢:" VerticalAlignment="Center" FontWeight="SemiBold" Margin="0,15,0,0"/>
                    <NumericUpDown Grid.Row="4" Grid.Column="1" Name="PriceNumeric" Minimum="0" FormatString="C" Watermark="僅本地儲存" Margin="10,15,0,0"/>
                    
                    <TextBlock Grid.Row="5" Grid.Column="0" Text="商店:" VerticalAlignment="Center" FontWeight="SemiBold" Margin="0,15,0,0"/>
                    <TextBox Grid.Row="5" Grid.Column="1" Name="ShopTextBox" Watermark="輸入商店名稱（僅本地儲存）" Margin="10,15,0,0"/>
                </Grid>
                
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="10" Margin="0,30,0,0">
                    <Button Name="CancelButton" Content="取消" Padding="15,8" Background="#6B7280" Foreground="White" CornerRadius="6"/>
                    <Button Name="SaveButton" Content="儲存" Padding="15,8" Background="#10B981" Foreground="White" CornerRadius="6"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Border>
</Window>